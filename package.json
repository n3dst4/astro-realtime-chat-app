{
  "type": "module",
  "name": "@lumphammer/chat-with-dice",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "pnpm run build && astro preview",
    "astro": "astro",
    "types:check": "astro check",
    "deploy": "pnpm run build && wrangler deploy",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint:check": "oxlint --type-aware",
    "lint:fix": "oxlint --fix --type-aware --fix-dangerously --fix-suggestions",
    "cloudflare-types": "wrangler types src/worker-configuration.d.ts",
    "db:generate": "drizzle-kit generate",
    "db:generate:roller": "drizzle-kit generate --config=./drizzle-roller.config.ts",
    "db:migrate:local": "wrangler d1 migrations apply todos --local",
    "db:migrate:prod": "wrangler d1 migrations apply todos --remote",
    "db:migrate:preview": "wrangler d1 migrations apply --env preview todos-preview --remote",
    "db:studio:local": "LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio",
    "db:studio:preview": "DB_ID='b7a13c53-a008-474b-8986-813e414477b1' drizzle-kit studio",
    "db:studio:prod": "DB_ID='a0f7d176-26be-4bde-ae3b-d71768d46c7c' drizzle-kit studio"
  },
  "dependencies": {
    "@astrojs/check": "0.9.7-beta.1",
    "@astrojs/cloudflare": "13.0.0-beta.9",
    "@astrojs/react": "5.0.0-beta.3",
    "@dice-roller/rpg-dice-roller": "^5.5.1",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "astro": "6.0.0-beta.15",
    "better-sqlite3": "^12.6.2",
    "daisyui": "^5.5.18",
    "dotenv": "^17.2.4",
    "drizzle-kit": "1.0.0-beta.15-859cf75",
    "drizzle-orm": "1.0.0-beta.15-859cf75",
    "lucide-react": "^0.575.0",
    "oxlint": "^1.50.0",
    "oxlint-tsgolint": "^0.15.0",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-astro-organize-imports": "^0.4.11",
    "prettier-plugin-classnames": "^0.9.0",
    "prettier-plugin-merge": "^0.9.0",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "quikdown": "^1.1.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "wrangler": "^4.68.1",
    "zod": "^4.3.6"
  }
