---
import "../styles/global.css";

const url = new URL(Astro.request.url);
const parentUrl =
  url.pathname === "/"
    ? null
    : (url.pathname.replace(/\/$/, "").split("/").slice(0, -1).join("/") ||
        "") + "/";

const { class: className } = Astro.props;

type Props = {
  class?: string;
  title: string;
};

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | ARCA</title>
  </head>
  <body>
    <header
      class="navbar bg-base-300 dark:bg-base-900 p-6 text-stone-600 dark:text-stone-100"
    >
      <div class="navbar-start gap-4">
        <a href="/" class="link link-primary link-hover text-xl font-medium"
          >ARCA</a
        >

        <h1 class="text-4xl font-bold">
          {title}
        </h1>
      </div>
      <div class="navbar-end gap-4">
        <a class="link link-hover link-primary" href={parentUrl}>Up</a>
      </div>
      <hr />
    </header>
    <main
      class={`prose p-6 ${className} lg:prose-lg lg:w-9/12 dark:prose-invert
        prose-stone`}
    >
      <slot />
    </main>
  </body>
</html>
